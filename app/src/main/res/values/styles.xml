<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:background">@color/tan_background</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="WordStyle">
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ItemTitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">@color/tab_selected_text_color</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>

</resources>
